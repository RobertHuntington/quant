{
  "editor.formatOnSave": true,
  "editor.rulers": [
    100
  ],
  "files.eol": "\n",
  "files.exclude": {
    "**/*.pyc": {
      "when": "$(basename).py"
    },
    "**/__pycache__": true
  },
  "files.trimTrailingWhitespace": true,
  "python.linting.pylintEnabled": true,
  "python.jediEnabled": true,
  "python.pythonPath": "/usr/local/bin/python3"
}